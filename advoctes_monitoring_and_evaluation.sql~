create database advocates_monitoring_and_evaluation;

use advocates_monitoring_and_evaluation;

create table CLIENT_APPLICATION_FORM(
ID INT NOT NULL auto_increment,
FIRST_NAME VARCHAR(50) NOT NULL,
LAST_NAME VARCHAR(50) NOT NULL,
MIDDLE_NAME VARCHAR(50) NOT NULL,
SEX VARCHAR(6) NULL,
DATE_OF_BIRTH DATETIME NOT NULL,
CONTACT VARCHAR(50) NOT NULL,
COUNTRY_OF_BIRTH VARCHAR(50) NOT NULL,
RESIDENCE_STATUS VARCHAR(20) NOT NULL,
LC_ZONE VARCHAR(50) NOT NULL,
STREET VARCHAR(50) NOT NULL,
DISTRICT VARCHAR(50) NOT NULL,
COUNTY VARCHAR(50) NOT NULL,
NAME_OF_LC_PERSON VARCHAR(50) NOT NULL,
LC_CONTACT VARCHAR(50) NOT NULL,
MARITAL_STATUS VARCHAR(50) NOT NULL,
RELATIONSHIP_WITH_NEXT_OF_KIN VARCHAR(50) NOT NULL,
NEXT_OF_KIN VARCHAR(50) NOT NULL,
LEVEL_OF_EDUCATION VARCHAR(80) NOT NULL,
LANGUAGE_SPOKEN VARCHAR(50) NOT NULL,
NUMBER_OF_DEPENDENTS VARCHAR(20)  NULL,
NAME_OF_GUARDIAN VARCHAR(50)  NULL,
DATE DATETIME NOT NULL,
PRIMARY KEY (ID)
);

create table SCANNED_DOCS(
ID INT NOT NULL auto_increment,
SCANNED_DOCS_ID INT references advocatem_and_e(ID),
CLIENT_NAME VARCHAR(50) NOT NULL,
CLIENT_DOCS BLOB NULL,
PRIMARY KEY (ID)
);


create table DISABILITY(
ID INT NOT NULL auto_increment,
DISABILITY_ID INT references LEGAL_AID_ACCOUNTABILITY_FORM(ID),
NAME_OF_DISABILITY VARCHAR(30) NOT NULL,
DESCRIPTION VARCHAR(30) NOT NULL,
PRIMARY KEY (ID)
);





create table ASSESMENT(
ID INT NOT NULL auto_increment,
IS_EMPLOYED VARCHAR(5) NOT NULL,
LAST_PAID_WORK VARCHAR(40) NOT NULL,
KIND_OF_WORK VARCHAR(40) NOT NULL,
SELF_EMPLOYED  VARCHAR(5) NOT NULL,
DIRECTOR_IN_A_COMPANY VARCHAR(40) NOT NULL,
BUSINESS VARCHAR(40) NOT NULL,
ANYOTHER_INCOME VARCHAR(30) NOT NULL,
DETAILS_OF_ASSETS VARCHAR(70) NOT NULL,
RENT VARCHAR(30) NOT NULL,
OTHERS VARCHAR(40) NOT NULL,
DESCRIPTION VARCHAR(30) NOT NULL,
NUMBER_HOUSE_COST VARCHAR(30) NOT NULL,
ANYOTHER_PAYMENT VARCHAR(30) NOT NULL,
PRIMARY KEY (ID)
);

create table SIDE_INCOME(
ID INT NOT NULL auto_increment,
SIDE_INCOME_ID INT references ASSESMENT(ID),
AMOUNT DOUBLE NOT NULL,
MONTHLY_INCOME DOUBLE  NULL,
ANNUAL_INCOME DOUBLE  NULL,
PRIMARY KEY (ID)
);

create table MATTER(
ID INT NOT NULL auto_increment,
LEGAL_AID_HELP VARCHAR(70) NOT NULL,
PROBLEM_DETAILS VARCHAR(300) NOT NULL,
NAME_OF_PROVIDER VARCHAR(50) NOT NULL,
ANY_COURT_PROCEEDING VARCHAR(10) NOT NULL,
COURT_TRIBUNAL VARCHAR(70) NOT NULL,
COURT_LOCATION VARCHAR(70) NOT NULL,
NEXT_COURT_SESSION_DATE DATE NOT NULL,
PRIMARY KEY (ID)
);

create table APPEAL_AGAINST_COURT_DECISION(
ID INT NOT NULL auto_increment,
IS_APPEAING_AGAINST_COURT_DECISION VARCHAR(10) NOT NULL,
COURT_THAT_MADE_DECISION VARCHAR(70) NOT NULL,
COURT_LOCATION VARCHAR(70) NOT NULL,
DATE_OF_LAST_DECISION DATE NOT NULL,
PRIMARY KEY (ID)
);


create table LEGAL_AID_ACCOUNTABILITY_FORM(
ID INT NOT NULL auto_increment,
LAWYER_NAME VARCHAR(50) NOT NULL,
CLIENT_NAME_OR_FILE_NAME VARCHAR(100) NOT NULL,
DESTINATION VARCHAR(80) NOT NULL,
PURPOSE VARCHAR(70) NOT NULL,
ANTICIPATED_DIRECTION VARCHAR(50) NOT NULL,
AMOUNT DOUBLE NOT NULL,
APPROVED_BY_PRESIDENT VARCHAR(10) NOT NULL,
APPROVED_BY_ACCOUNTS VARCHAR(10) NOT NULL,
LEGAL_AID_DATE DATE NOT NULL,
PRIMARY KEY (ID)
);

create table ADMIN(
ID INT NOT NULL auto_increment,
NAME VARCHAR(100) NOT NULL,
TYPE_OF_USER VARCHAR(50) NOT NULL,
PASSWD VARCHAR(100) NOT NULL,
PRIMARY KEY (ID)
);



create table LAWYER_DETAILS(
ID INT NOT NULL auto_increment,
NAME VARCHAR(100) NOT NULL,
CONTACT VARCHAR(50) NOT NULL,
CURRENT_CASE VARCHAR(100) NOT NULL,
NUMBER_OF_CASES VARCHAR(50) NOT NULL,
PRIMARY KEY (ID)
);


create table LAWYER_CASE_LOGGING(
ID INT NOT NULL auto_increment,
NAME_OF_LAWYER VARCHAR(50) NOT NULL,
NUMBER_OF_CASES INT NOT NULL,
PRIMARY KEY (ID)
);


create table CASES(
ID INT NOT NULL auto_increment,
NAME VARCHAR(50) NOT NULL,
NUMBER_OF_CASES INT NOT NULL,
DATE_OF_CASE DATE NOT NULL,
DETAILS_OF_CASE VARCHAR(50) NOT NULL,
CASES INT references LAWYER_CASE_LOGGING(ID),
PRIMARY KEY (ID)
);

create table CASES_STATUS(
ID INT NOT NULL auto_increment,
NAME_0F_CASE VARCHAR(50) NOT NULL,
CASE_STATUS VARCHAR(10) NOT NULL,
NAME_OF_LAWYER VARCHAR(50) NOT NULL,
PRIMARY KEY (ID)
);


create table LAWYER_ATTENDANCE_STATUS_REGISTER(
ID INT NOT NULL auto_increment,
NAME_0F_LAWYER VARCHAR(50) NOT NULL,
NAME_OF_DESTINATION VARCHAR(10) NOT NULL,
ATTENDANCE_STATUS VARCHAR(50) NOT NULL,
ATTENDANCE_DATE DATE NOT NULL,
PRIMARY KEY (ID)
);


create table CHECKIN_OUT_REGISTER(
ID INT NOT NULL auto_increment,
NAME_0F_LAWYER VARCHAR(50) NOT NULL,
CHECKIN_DATE DATE NOT NULL,
CHECKOUT_DATE DATE NOT NULL,
PRIMARY KEY (ID)
);


create table LOCATION_STATUS(
ID INT NOT NULL auto_increment,
LOCATION_ADDRESS VARCHAR(50) NOT NULL,
DATE DATE NOT NULL,
PRIMARY KEY (ID)
);



























